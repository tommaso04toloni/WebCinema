@model WebCinema.Models.Prenotazioni

@{
    ViewData["Title"] = "Delete";
}


<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Prenotazione</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="form-group">
            <label asp-for="Idutente" class="control-label"></label>
            <select asp-for="Idutente" class="form-control" asp-items="ViewBag.Idutente"></select>
        </div>
        <div class="form-group">
            <label asp-for="Idspettacolo" class="control-label"></label>
            <select asp-for="Idspettacolo" class="form-control" asp-items="ViewBag.Idspettacolo"></select>
        </div>
        <div class="form-group">
            <label asp-for="Idposto" class="control-label"></label>
            <select asp-for="Idposto" class="form-control" asp-items="ViewBag.Idposto"></select>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
        <a asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}