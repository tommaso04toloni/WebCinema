@model WebCinema.Models.ViewModels.PrenotazioneVM
<form method="post">

    <div class="card container">

        <div class="card-header bg-primary text-light ml-0 row ">

            <div class="col-12 col-md-6">

                <h1 class="h1">@Model.film.Titolo </h1>

                <p class="badge text-bg-danger rounded-pill">@Model.film.Genere</p>

            </div>

            <div class="col-12 col-md-6 text-end pt-4">

                <div class="col-12 col-lg-3 offset-lg-1 text-center">

                    <img src="@Model.film.Immagine" width="100%" class="rounded" />

                </div>

            </div>

        </div>

        <div class="card-body row container">

            <div class="container rounded p-2">

                <div class="row justify-content-center">

                    <div class="col-8 col-lg-8">

                        <div class="row pl-2">

                            <h5 class="text-muted">SPETTACOLI DISPONIBILI:</h5>

                        </div>

                        <div class="row pl-2">

                            <h5 class="text-muted pb-2">List Price: <strike>---x---</strike></h5>

                        </div>

                        <div class="row text-center pl-2">

                            <div class="p-1 col-2 bg-secondary border-bottom">

                                <div>Spettacoli</div>

                            </div>

                            <div class="p-1 col-2 bg-secondary border-bottom">

                                <div>1-50</div>

                            </div>

                            <div class="p-1 col-2 bg-secondary border-bottom">

                                <div>51-100</div>

                            </div>

                            <div class="p-1 col-2 bg-secondary border-bottom">

                                <div>100+</div>

                            </div>

                        </div>

                        <div class="row text-center pl-2" style="color:maroon; font-weight:bold">

                            <div class="p-1 col-2 bg-secondary">

                                <div>Price</div>

                                <div class="p-1 col-2 bg-secondary">

                                    <div>$$</div>

                                </div>

                                <div class="p-1 col-2 bg-secondary">

                                    <div>$$</div>

                                </div>

                                <div class="p-1 col-2 bg-secondary">

                                    <div>$$</div>

                                </div>

                            </div>

                            <div class="row pl-2">

                                <p class="text-secondary">@Html.Raw(Model.film.Descrizione)</p>

                            </div>

                            <div class="row pl-2">

                                <div class="col-2 text-primary"><h4>Count</h4></div>

                                <div class="col-10"><input asp-for="film.Spettacolis" lass="form-list" /></div>

                            </div>

                        </div>

                      

                    </div>

                </div>

            </div>

            <div class="card-footer">

                <div class="row">

                    <div class="col-12 col-md-6 pb-1">

                        <a class="btn btn-success form-control " style="height:50px;">Back to List</a>

                    </div>

                    <div class="col-12 col-md-6 pb-1">

                        <button type="submit" value="Add to Cart" class="btn btn-primary form-control" style="height:50px;">Add to Cart</button>

                    </div>

                </div>

            </div>

        </div>
    </div>
</form>