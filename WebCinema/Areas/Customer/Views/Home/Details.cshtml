@model WebCinema.Models.ViewModels.PrenotazioneVM
@{

    ViewData["Title"] = "Details";

}

<form method="post">

    <div class="card container">

        <div class="card-header bg-primary text-light ml-0 row ">

            <div class="col-12 col-md-6">

                <h1 class="text-white">@Model.film.Titolo</h1>

                <p class="badge text-bg-danger rounded-pill">@Model.film.Genere</p>

            </div>

            <div class="col-12 col-md-6 text-end pt-4">

                <span class="badge text-bg-dark rounded-pill pt-2" style="height:30px;">@Model.film.Durata min</span>

                <span class="badge text-bg-dark rounded-pill pt-2" style="height:30px;">@Model.film.AnnoProduzione</span>

            </div>

        </div>

        <div class="card-body row container">

            <div class="container rounded p-2">

                <div class="row justify-content-center">

                    <div class="col-8 col-lg-8">

                        <div class="row pl-2">



                        </div>

                        <div class="row pl-2">



                        </div>

                        <div class="row text-center pl-2">
@*                            <label asp-for="SpettacoliList" class="control-label"></label>
                            <select asp-for="SpettacoliList" class="form-select" asp-items="@Model.SpettacoliList">
                                <option disabled selected>--Select Spettacolo--</option>
                            </select>
                            <span asp-validation-for="SpettacoliList" class="text-danger"></span>
*@

                            <select asp-for="spettacoliId" asp-items="@Model.SpettacoliList" class="form-select" aria-label="spettacolo">

                                <option disabled selected>-Select spettacolo-</option>

                            </select>
                        </div>

                        <div class="row text-center pl-2" style="color:maroon; font-weight:bold">


                        </div>

                        <div class="row pl-2">

                            <p class="text-secondary">@Html.Raw(@Model.film.Descrizione)</p>

                        </div>

                        <div class="row pl-2">

                            <div class="col-2 text-primary" style="min-width: 120px;"><h4>Numero Biglietti</h4></div>

                            <label asp-for="numeroPosti" class="control-label"></label>
                            <input asp-for="numeroPosti" class="form-control" />
                            <span asp-validation-for="numeroPosti" class="text-danger"></span>

                        </div>

                    </div>

                    <div class="col-8 col-lg-3 offset-lg-1 text-center">

                        <img src="@Model.film.Immagine" class="rounded" style="width:100%" />

                    </div>

                </div>

            </div>

        </div>

        <div class="card-footer">

            <div class="row">

                <div class="col-12 col-md-6 pb-1">

                    <a class="btn btn-success form-control " style="height:50px;" asp-action="Index">Back to Home</a>

                </div>

                <div class="col-12 col-md-6 pb-1">

                    <button type="submit" value="Add to Cart" class="btn btn-primary form-control" style="height:50px;">Add to Cart</button>

                </div>

            </div>

        </div>

    </div>

</form>